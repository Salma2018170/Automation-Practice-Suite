{
  "configuration": {
    "status": "INFO",
    "name": "Default",
    "appenders": {
      "Console": {
        "name": "Console",
        "target": "SYSTEM_OUT",
        "PatternLayout": {
          "pattern": "%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
        }
      },
      "RollingFile": {
        "name": "File",
        "fileName": "logs/automation.log",
        "filePattern": "logs/automation-%d{MM-dd-yyyy}-%i.log.gz",
        "PatternLayout": {
          "pattern": "%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
        },
        "Policies": {
          "SizeBasedTriggeringPolicy": {
            "size": "10 MB"
          }
        },
        "DefaultRolloverStrategy": {
          "max": "10"
        }
      }
    },
    "loggers": {
      "root": {
        "level": "INFO",
        "appender-ref": [
          {
            "ref": "Console"
          },
          {
            "ref": "File"
          }
        ]
      }
    }
  }
}

